<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>URL shortener</title>
    </head>
    <body>
        <h1>URL shortener</h1>
        <div>            
            <form method="POST" action="/url">
                <label for="redirectUrl">Enter the original URL: </label>
                <input type="text" id="redirectUrl" name="redirectUrl" placeholder="http://example.com">
                <button type="submit">Generate</button>
            </form>
        </div>

        <div>
            <% if (locals.id) { %>
                <p>Generated URL: http://localhost:5000/url/<%= locals.id %></p>
            <% } %>
        </div>

        <div>
            <% if(locals.urls) { %>

                <h2>Analytics</h2>

                <table border="1">
                    <thead>
                        <tr>
                            <th>S. no</th>
                            <th>ShortID</th>
                            <th>Redirect</th>
                            <th>Clicks</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <% urls.forEach((url, index) => { %>
                                <tr>
                                    <td><%= index + 1 %> </td>
                                    <td><%= url.shortUrl %> </td>
                                    <td><%= url.redirectUrl %> </td>
                                    <td><%= url.visitHistory.length %> </td>
                                </tr>
                            <% }); %>
                        </tr>
                    </tbody>
                </table>
            <% } %>
        </div>

    </body>
</html>